{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "target": "ESNext",
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "Node16",
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "declaration": true
  },
  "ts-node": {
    "esm": true
  },

  "include": ["src/**/*.mts", "src/**/*.ts", "server.mts"],
  "exclude": ["node_modules", "dist", "src/**/test/*", "testSetup/*"]
}
