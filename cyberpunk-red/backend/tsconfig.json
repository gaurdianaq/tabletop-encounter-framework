{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "target": "ESNext",
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "Node16",
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true
  },

  "include": ["src/**/*.mts", "src/**/*.ts"],
  "exclude": ["node_modules, dist"]
}
